<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header con campana -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="#0D47A1">

            <TextView
                android:id="@+id/tvHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Dashboard - Admin"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/btnNotifications"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Notificaciones"
                android:padding="8dp"
                android:src="@drawable/ic_notifications"
                android:tint="#FFFFFF" />

        </LinearLayout>

        <!-- Resumen Vacantes -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginEnd="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvVacantesAbiertasLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vacantes Abiertas"
                        android:textStyle="bold"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:id="@+id/tvVacantesAbiertas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp"
                android:layout_marginStart="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvTotalVacantesLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Vacantes"
                        android:textStyle="bold"
                        android:textColor="#0D47A1" />

                    <TextView
                        android:id="@+id/tvTotalVacantes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="36sp"
                        android:textStyle="bold"
                        android:textColor="#212121" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- KPIs Matching -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/tvKpiMatchLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="% Match Promedio"
                    android:textStyle="bold"
                    android:textColor="#0D47A1" />

                <TextView
                    android:id="@+id/tvKpiMatchValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0%"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"
                    android:textColor="#388E3C" />

                <ProgressBar
                    android:id="@+id/progressMatch"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="0"
                    android:layout_marginTop="8dp"
                    android:progressTint="#4CAF50" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- NUEVO: Distribución por Área - PieChart -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Distribución de Vacantes por Área"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0D47A1" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/pieChartAreas"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:padding="8dp" />

        </androidx.cardview.widget.CardView>

        <!-- Top Skills con HorizontalBarChart -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Top Skills Más Demandados"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0D47A1" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <com.github.mikephil.charting.charts.HorizontalBarChart
                android:id="@+id/barChartSkills"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:padding="8dp" />

        </androidx.cardview.widget.CardView>

        <!-- Top Skills (RecyclerView Original - Opcional mantener o eliminar) -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Top Skills (Lista)"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0D47A1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTopSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="120dp"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"
            tools:itemCount="3"
            tools:listitem="@layout/item_skill" />

        <!-- Brechas Prioritarias -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="Brechas Prioritarias"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#0D47A1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBrechas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:minHeight="120dp"
            android:nestedScrollingEnabled="false"
            android:clipToPadding="false"
            tools:itemCount="3"
            tools:listitem="@layout/item_brecha" />

        <ProgressBar
            android:id="@+id/progressLoading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_marginTop="16dp" />

    </LinearLayout>

</ScrollView>
